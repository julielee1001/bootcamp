<div class='container'>
<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <% author = @authors.find do |author| author.id == article.author_id %>
      <% end %>
    <li>
        <%= link_to article.title, article %> - 
        <% if author %>
          By <%= author.name %>, <%= author.bio %>
        <% else %>
          <%= "No Author found" %>
        <% end %>
    </li>
  <% end %>
</ul>


<%= link_to "New Article", new_article_path %> |
<%= link_to "View All Categories", categories_path %> |
<%= link_to "View All Authors", authors_path %> |
<%= link_to "Support the Blog", new_donation_path %>

</div>